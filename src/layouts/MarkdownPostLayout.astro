---
//import { fade } from 'astro:transitions';
import { format } from 'date-fns';
import { es } from 'date-fns/locale';
import BaseLayout from './BaseLayout.astro';
import Tags from '@components/Tags.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title} description={frontmatter.description}>
	{frontmatter.pubDate && <p>{format(frontmatter.pubDate, "d 'de' MMMM 'de' yyyy", {locale: es})}</p>}
	<!--<p transition:animate={fade({ duration: '2s' })}><em>{frontmatter.description}</em></p>-->
	{frontmatter.description && <p><em>{frontmatter.description}</em></p>}
	<!--<p>Written by: <a href="/about/">{frontmatter.author}</a></p>-->
	{frontmatter.image && <p><img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} /></p>}
	{frontmatter.tags && <Tags tags={frontmatter.tags} />}
	<slot />
</BaseLayout>
